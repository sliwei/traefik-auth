{
  "name": "server",
  "version": "1.0.0",
  "description": "sso 服务端",
  "author": "awei <274635143@qq.com>",
  "private": true,
  "scripts": {
    "dev": "cross-env ENV=dev MODE=development ./node_modules/.bin/nodemon --exec babel-node bin/www",
    "build:dev": "webpack --env.ENV=dev --env.production",
    "build:test": "webpack --env.ENV=test --env.production",
    "build:prod": "webpack --env.ENV=prod --env.production",
    "build:live": "webpack --env.ENV=live --env.production",
    "pm2": "pm2 start processes.json && pm2 logs",
    "node": "node dist/server.js",
    "restart": "pm2 restart processes.json",
    "lint": "eslint --quiet=true --fix --ext .js app",
    "lint:fix": "eslint --fix",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "app/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "js-md5": "^0.7.2",
    "jsonwebtoken": "^8.1.0",
    "koa": "^2.2.0",
    "koa-body": "^4.0.4",
    "koa-favicon": "^2.0.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^2.0.1",
    "koa-router": "^7.1.1",
    "koa-static": "^3.0.0",
    "koa-views": "^5.2.1",
    "koa2-swagger-ui": "^5.3.0",
    "moment": "^2.24.0",
    "mysql2": "^1.6.5",
    "node-fetch": "^2.6.0",
    "nunjucks": "^3.1.3",
    "parameter": "^3.5.0",
    "sequelize": "^5.2.8",
    "swagger-jsdoc": "6.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.7",
    "@babel/core": "^7.16.7",
    "@babel/node": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@babel/runtime": "^7.16.7",
    "babel-loader": "^8.2.3",
    "chalk": "4.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "colors": "^1.3.2",
    "copy-webpack-plugin": "5.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "externals-dependencies": "^1.0.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "webpack": "4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-node-externals": "^3.0.0"
  }
